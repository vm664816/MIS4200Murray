@model MIS4200Murray.Models.Appointment

@{
    ViewBag.Title = "Appointment Delete";
}

<h2>Appointment Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Doctor Full Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doctor.doctorFullName)
        </dd>

        <dt>
            Payment ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Payment.paymentID)
        </dd>

        <dt>
            Appointment Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.appointmentDate)
        </dd>

        <dt>
            Appointment Reason
        </dt>

        <dd>
            @Html.DisplayFor(model => model.appointmentReason)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
