@model IEnumerable<MIS4200Murray.Models.Patient>

@{
    ViewBag.Title = "Patient Index";
}

<h2>Patient Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone Number
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.patientID }) |
            @Html.ActionLink("Details", "Details", new { id=item.patientID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.patientID })
        </td>
    </tr>
}

</table>
